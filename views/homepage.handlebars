<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <a href="/post/{{post.id}}">
      <h3>{{post.title}}</h3>
      <h5>Posted by {{user.username}} on {{format_date post.date_created}}</h5>
      <p>{{post.content}}</p>
    </a>
  </div>
</div>
{{/each}}

<script src="./js/post.js"></script>